@model Hamburgercim.Models.Data.Classes.Siparis
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet" />

<table class="table table-striped">
    <thead>
        <tr>
            <th>
                Hamburger
            </th>
            <th>
                Fotograf
            </th>
            <th>
                İçecek
            </th>
            <th>
                Ekstra Malzeme
            </th>
            <th>
                Hamburger Adet
            </th>
            <th>
                Toplam Tutar
            </th>
        </tr>
    </thead>
    <tbody>
        @*Buraya sırasıyla bütün ürünler listenecek*@
        @{
            if (Model != null)
            {

                <tr>
                    <td>@Model.Hamburger.HamburgerAd</td>
                    <td><img src="~/images/@Model.Hamburger.HamburgerFoto" height="40px" width="40px" alt="" /></td>
                    <td>@Model.Icecek?.IcecekAd</td>
                    <td>
                        @foreach (var extra in Model.EkstraMalzeme)
                        {
                            @(extra.EkstraMalzemeAd + ",")
                        }
                    </td>
                    <td>@Model.SiparisAdet.ToString()</td>
                    <td>@Model.ToplamTutar</td>

                    <td><a class="btn" style="font-size:24px; background-color:beige; border:solid" asp-action="Index" asp-controller="Home">SİPARİŞ ONAYLA</a> </td>
                </tr>

            }
        }
    </tbody>
</table>