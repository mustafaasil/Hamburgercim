<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="description" content="" />
    <meta name="author" content="" />
    <title>HamBurgercim Admin Paneli - @ViewData["Title"]</title>
    <link href="https://cdn.datatables.net/1.13.1/css/dataTables.bootstrap5.min.css" rel="stylesheet" />
    <link href="~/admin/css/styles.css" rel="stylesheet" />
    <script src="https://use.fontawesome.com/releases/v6.1.0/js/all.js" crossorigin="anonymous"></script>
    <link href="~/admin/lib/summernote/summernote-lite.min.css" rel="stylesheet" />
</head>
<body class="sb-nav-fixed">
    <nav class="sb-topnav navbar navbar-expand navbar-dark bg-dark">
        <!-- Navbar Brand-->
        <a class="navbar-brand ps-3" asp-area="Admin" asp-controller="Dashboard" asp-action="Index">Admin Paneli</a>
        <!-- Sidebar Toggle-->
        <button class="btn btn-link btn-sm order-1 order-lg-0 me-4 me-lg-0" id="sidebarToggle" href="#!"><i class="fas fa-bars"></i></button>
   
        
    </nav>
    <div id="layoutSidenav">
        <div id="layoutSidenav_nav">
            <nav class="sb-sidenav accordion sb-sidenav-dark" id="sidenavAccordion">
                <div class="sb-sidenav-menu">
                    <div class="nav">
                        <a class="nav-link" asp-controller="Dashboard" asp-action="Index">
                            <div class="sb-nav-link-icon">@*<i class="fas fa-tachometer-alt"></i>*@<i class="fa-solid fa-list"></i></div>
                            Sipariş Listesi
                        </a>
                        <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">
                            <div class="sb-nav-link-icon"><i class="fas fa-external-link"></i></div>
                            Siteye Git
                        </a>
                        <div class="sb-sidenav-menu-heading">Menu Ekle</div>
                        <a class="nav-link collapsed" href="#" data-bs-toggle="collapse" data-bs-target="#collapseHamburgerler" aria-expanded="false" aria-controls="collapseHamburgerler">
                            <div class="sb-nav-link-icon">@*<i class="fas fa-columns"></i>*@<i class="fa-solid fa-burger"></i></div>
                            Hamburger
                            <div class="sb-sidenav-collapse-arrow"><i class="fas fa-angle-down"></i></div>
                        </a>
                        <div class="collapse" id="collapseHamburgerler" aria-labelledby="headingOne" data-bs-parent="#sidenavAccordion">
                            <nav class="sb-sidenav-menu-nested nav">
                                <a class="nav-link" asp-area="Admin" asp-controller="Hamburger" asp-action="Ekle">Hamburger Ekle</a>
                                <a class="nav-link" asp-area="Admin" asp-controller="Hamburger" asp-action="Index">Hamburger Listele</a>
                            </nav>
                        </div>
                        <a class="nav-link collapsed" href="#" data-bs-toggle="collapse" data-bs-target="#collapseIcecekler" aria-expanded="false" aria-controls="collapseIcecekler">
                            <div class="sb-nav-link-icon">@*<i class="fas fa-columns"></i>*@<i class="fa-solid fa-wine-bottle"></i></div>
                            İçecek
                            <div class="sb-sidenav-collapse-arrow"><i class="fas fa-angle-down"></i></div>
                        </a>
                        <div class="collapse" id="collapseIcecekler" aria-labelledby="headingOne" data-bs-parent="#sidenavAccordion">
                            <nav class="sb-sidenav-menu-nested nav">
                                <a class="nav-link" asp-controller="Icecek" asp-action="Ekle">İçecek Ekle</a>
                                <a class="nav-link" asp-controller="Icecek" asp-action="Index">İçecek Listele</a>
                            </nav>
                        </div>
                        <a class="nav-link collapsed" href="#" data-bs-toggle="collapse" data-bs-target="#collapseEkstramalzemeler" aria-expanded="false" aria-controls="collapseEkstramalzemeler">
                            <div class="sb-nav-link-icon">@*<i class="fas fa-columns"></i>*@<i class="fa-solid fa-coins"></i></div>
                            Ekstra Malzeme
                            <div class="sb-sidenav-collapse-arrow"><i class="fas fa-angle-down"></i></div>
                        </a>
                        <div class="collapse" id="collapseEkstramalzemeler" aria-labelledby="headingOne" data-bs-parent="#sidenavAccordion">
                            <nav class="sb-sidenav-menu-nested nav">
                                <a class="nav-link" asp-controller="Ekstramalzeme" asp-action="Ekle">Ekstra Malzeme Ekle</a>
                                <a class="nav-link" asp-controller="Ekstramalzeme" asp-action="Index">Ekstra Malzeme Listele</a>
                            </nav>
                        </div>
                        <a class="nav-link collapsed" href="#" data-bs-toggle="collapse" data-bs-target="#collapseBoyutlar" aria-expanded="false" aria-controls="collapseBoyutlar">
                            <div class="sb-nav-link-icon">@*<i class="fas fa-columns"></i>*@<i class="fa-solid fa-ruler"></i></div>
                            Boyut
                            <div class="sb-sidenav-collapse-arrow"><i class="fas fa-angle-down"></i></div>
                        </a>
                        <div class="collapse" id="collapseBoyutlar" aria-labelledby="headingOne" data-bs-parent="#sidenavAccordion">
                            <nav class="sb-sidenav-menu-nested nav">
                                <a class="nav-link" asp-controller="Boyut" asp-action="Ekle">Boyut Ekle</a>
                                <a class="nav-link" asp-controller="Boyut" asp-action="Index">Boyut Listele</a>
                            </nav>
                        </div>

                    </div>
                </div>
                <div class="sb-sidenav-footer">
                    <div class="small">Giriş yapıldı:</div>
                    Admin
                </div>
            </nav>
        </div>
        <div id="layoutSidenav_content">
            <main>
                <div class="container-fluid px-4">
                    @if (ViewData["Title"] != null)
                    {
                        <h1 class="mt-4">@ViewData["Title"]</h1>
                    }
                    @RenderBody()
                </div>
            </main>
            <footer class="py-4 bg-light mt-auto">
                <div class="container-fluid px-4">
                    <div class="d-flex align-items-center justify-content-between small">
                        <div class="text-muted">Copyright &copy; Düşler Dünyası @DateTime.Now.Year</div>
                        <div>
                            <a href="#">Gizlilik Politikası</a>
                            &middot;
                            <a href="#">Şartlar &amp; Koşullar</a>
                        </div>
                    </div>
                </div>
            </footer>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>
    <script src="https://code.jquery.com/jquery-3.6.3.min.js" integrity="sha256-pvPw+upLPUjgMXY0G+8O0xUf+/Im1MZjXxxgOcBQBXU=" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.8.0/Chart.min.js" crossorigin="anonymous"></script>
    <script src="https://cdn.datatables.net/1.13.1/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.1/js/dataTables.bootstrap5.min.js"></script>
    <script src="~/admin/lib/summernote/summernote-lite.min.js"></script>
    <script src="~/admin/js/scripts.js"></script>
    @await RenderSectionAsync("Scripts", false)
</body>
</html>
