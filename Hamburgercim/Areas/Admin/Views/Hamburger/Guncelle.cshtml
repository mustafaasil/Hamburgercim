
@model Hamburgercim.ViewModels.HamburgerViewModel

<div class="card-header; text-center;">
    <h2 style="color:tomato; text-align:center">ADMİN HAMBURGER GÜNCELLEME SAYFASI</h2>

    @if (Model != null)
    {
        <h3 class="text-center"> Güncellenecek Hamburger: @Model.HamburgerAd Fiyatı: @Model.HamburgerFiyat </h3>
    }

</div>
<div class="card-body">
    <form asp-area="Admin" asp-controller="Hamburger" asp-action="Guncelle" method="post" enctype="multipart/form-data">
        <div class="form-group">
            <label asp-for="HamburgerAd">HAMBURGER ADI:</label>
            <input asp-for="HamburgerAd" type="text" class="form-control" />
            <span asp-validation-for="HamburgerAd" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="HamburgerFiyat">HAMBURGER FİYATI:</label>
            <input asp-for="HamburgerFiyat" type="text" class="form-control" />
            <span asp-validation-for="HamburgerFiyat" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="HamburgerResim">HAMBURGER RESİMİ GÜNCELLEME:</label>
            <input asp-for="HamburgerResim" type="file" class="form-control" />
        </div>
        <button type="submit" class="btn btn-primary mt-3">GÜNCELLE</button>
    </form>
</div>


